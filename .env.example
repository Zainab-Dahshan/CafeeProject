# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=production  # Change to 'development' for local development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///database.db  # For development
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname  # For production

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Admin User
ADMIN_EMAIL=admin@cafewebsite.com
ADMIN_PASSWORD=change-this-strong-password

# Application Settings
ADMIN_EMAIL=admin@cafewebsite.com
PER_PAGE=10  # Items per page for pagination

# Security
SESSION_COOKIE_SECURE=True  # Set to True in production with HTTPS
REMEMBER_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
REMEMBER_COOKIE_HTTPONLY=True

# Caching (Redis example)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Google OAuth (if applicable)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Other third-party API keys
# MAPS_API_KEY=your-google-maps-api-key
